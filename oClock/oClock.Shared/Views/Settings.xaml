<Page
    x:Class="oClock.Shared.Views.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:oClock.Shared.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="SettingPage"
    Background="{ThemeResource AppChromeAcrylicHostBackdropMediumLowBrush}"
    RequestedTheme="Dark"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Grid
            Grid.Row="1"
            Width="400"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock
                x:Name="CityTxt"
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="3"
                HorizontalAlignment="Center"
                FontFamily="Calibri"
                Text="Max Office Hrs"
                TextAlignment="Center" />
            <ComboBox
                Grid.Row="1"
                Grid.Column="0"
                HorizontalAlignment="Stretch" />
            <ComboBox
                Grid.Row="1"
                Grid.Column="1"
                HorizontalAlignment="Stretch" />
            <ComboBox
                Grid.Row="1"
                Grid.Column="2"
                HorizontalAlignment="Stretch" />
        </Grid>
        <StackPanel
            Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <TextBlock
                x:Name="RemTxt"
                HorizontalAlignment="Center"
                FontFamily="Calibri"
                Text="Max Office Hrs" />
            <TimePicker
                Margin="0,0,0,8"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                ClockIdentifier="24HourClock"
                Time="{Binding MaxTime, Mode=TwoWay}" />

        </StackPanel>
        <Grid
            Grid.Row="3"
            Margin="0,0,0,8"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button
                x:Name="BackBtn"
                Grid.Column="0"
                Background="Transparent"
                Command="{Binding BackCommand}"
                CommandParameter="{Binding ElementName=SettingPage}">
                <Viewbox MaxWidth="100" MaxHeight="100">
                    <SymbolIcon Symbol="Back" />
                </Viewbox>
            </Button>
            <Button
                x:Name="SaveBtn"
                Grid.Column="1"
                Background="Transparent"
                Command="{Binding InputCheckInTimeCommand}">
                <Viewbox MaxWidth="100" MaxHeight="100">
                    <SymbolIcon Symbol="Save" />
                </Viewbox>
            </Button>


        </Grid>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="AdaptiveVisualStateGroup">
                <VisualState x:Name="VisualStateNarrow">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource NarrowMinWidth}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!--  TODO: change properties for narrow view  -->
                        <!--<Setter Target="TaskTxt.FontSize" Value="16" />
                            <Setter Target="CurrentTimeTxt.FontSize" Value="16" />
                            <Setter Target="SettingIcon.Width" Value="32" />
                            <Setter Target="SettingIcon.Height" Value="32" />
                            <Setter Target="ClockIcon.Width" Value="16" />
                            <Setter Target="ClockIcon.Height" Value="16" />

                            <Setter Target="TimeTxt.FontSize" Value="32" />-->
                        <Setter Target="CityTxt.FontSize" Value="24" />
                        <Setter Target="RemTxt.FontSize" Value="24" />
                        <Setter Target="BackBtn.Width" Value="48" />
                        <Setter Target="BackBtn.Height" Value="48" />
                        <Setter Target="SaveBtn.Width" Value="48" />
                        <Setter Target="SaveBtn.Height" Value="48" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="VisualStateNormal">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource NormalMinWidth}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!--  TODO: change properties for normal view  -->
                        <!--<Setter Target="TaskTxt.FontSize" Value="24" />-->
                        <!--<Setter Target="CurrentTimeTxt.FontSize" Value="24" />
                            <Setter Target="SettingIcon.Width" Value="48" />
                            <Setter Target="SettingIcon.Height" Value="48" />
                            <Setter Target="ClockIcon.Width" Value="24" />
                            <Setter Target="ClockIcon.Height" Value="24" />

                            <Setter Target="TimeTxt.FontSize" Value="48" />-->
                        <Setter Target="CityTxt.FontSize" Value="36" />
                        <Setter Target="RemTxt.FontSize" Value="36" />
                        <Setter Target="BackBtn.Width" Value="52" />
                        <Setter Target="BackBtn.Height" Value="52" />
                        <Setter Target="SaveBtn.Width" Value="52" />
                        <Setter Target="SaveBtn.Height" Value="52" />


                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="VisualStateWide">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource WideMinWidth}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!--<Setter Target="TaskTxt.FontSize" Value="32" />-->
                        <!--<Setter Target="CurrentTimeTxt.FontSize" Value="32" />
                            <Setter Target="SettingIcon.Width" Value="52" />
                            <Setter Target="SettingIcon.Height" Value="52" />
                            <Setter Target="ClockIcon.Width" Value="32" />
                            <Setter Target="ClockIcon.Height" Value="32" />

                            <Setter Target="TimeTxt.FontSize" Value="52" />-->
                        <Setter Target="CityTxt.FontSize" Value="40" />
                        <Setter Target="RemTxt.FontSize" Value="40" />
                        <Setter Target="BackBtn.Width" Value="56" />
                        <Setter Target="BackBtn.Height" Value="56" />
                        <Setter Target="SaveBtn.Width" Value="56" />
                        <Setter Target="SaveBtn.Height" Value="56" />

                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</Page>
